<%= form_for(@ticket) do |f| %>
<%= render 'common/errors', resource: @ticket %>
  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :first_station %><br>
    <%= f.collection_select :first_station_id, RailwayStation.all, :id, :title %>
  </div>
  <div class="field">
    <%= f.label :last_station %><br>
    <%= f.collection_select :last_station_id, RailwayStation.all, :id, :title %>
  </div>
  <div class="field">
    <%= f.label :train %><br>
    <%= f.collection_select :train_id, Train.all, :id, :number%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
